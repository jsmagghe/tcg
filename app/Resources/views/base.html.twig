<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% if jeu is defined %}
            <link rel="shortcut icon" href="{{ asset('images/icon-'~jeu~'.png') }}">
        {% endif %}
        <title>{% block title %}Cartes online !{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/default.css') }}" rel="stylesheet">
            <link href="{{ asset('css/style-global.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body id="{% block idBody %}global{% endblock %}">
        <div class="global-container">
            {% block header %}
                {% include "::header.html.twig" %}
            {% endblock %}
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <script src="{{ asset('js/global.js') }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ asset('js/fonction.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        {% endblock %}
    </body>
</html>