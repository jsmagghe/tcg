{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/carte.css') }}" />
{% endblock %}



{% block body %}
    {{ parent() }}
    <section id="main">
        <div class="container">
            <div>
                <form method="post" id="selecteur">
                    {{ form_widget(form) }}
                    <input type="submit" value="Filtrer">
                    <input type="reset" value="Initialiser">
                </form>
            </div>
            <div class="row">
                <div id="cartes" class="row xs-16">
                    {{ include("::carte_ajax.html.twig") }}
                </div>
                <div id="deck" class="xs-8">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}        
                        {{ include("::deck_ajax.html.twig") }}
                    {% else %}
                        <p>Vous devez vous connecter pour cr√©er un deck</p>
                    {% endif %}        
                </div>
            </div>
        </div>
    </section>
</div>


{%endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
