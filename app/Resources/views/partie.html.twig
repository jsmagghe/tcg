{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link type="text/css" rel="stylesheet" href="{{ asset('css/carte.css') }}" />
{% endblock %}



{% block body %}
    {{ parent() }}
    {% if (inversable is defined) and (inversable==true) %}
        <a href="{{ path('jeus_'~jeu~'_partie_inverser', {'id':Partie.id})}}">inverser affichage</a>
    {% endif %}
    {% if (choixPossibles is defined) and (choixPossibles|length>0) %}
        <div id="choix">
            {% for choix in choixPossibles %}
                {{choix|raw }}
            {% endfor %}
        </div>
    {% endif %}
    <div id="tapis">
        {% if carteJoueurs is defined %}
            <div id="cartes-joueur">
                {% for Emplacement, Cartes in carteJoueurs %}
                    <div id="{{emplacement}}">
                        {% for Carte in Cartes %}
                            <div>
                                <img src="{{ asset('images/'~jeu|capitalize~'/'~Carte.lienPartie) }}" id="{{ Carte.id }}" class="carte_deck"/>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if carteAdversaires is defined %}
            <div id="cartes-adversaire">
                {% for Emplacement, Cartes in carteAdversaires %}
                    <div id="{{emplacement}}">
                        {% for Carte in Cartes %}
                            <div>
                                <img src="{{ asset('images/'~jeu|capitalize~'/'~Carte.lienPartieAdverse) }}" id="{{ Carte.id }}" class="carte_deck"/>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>


{%endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        var url = {{ path('jeus_'~jeu~'_carte') }};
    </script>
{% endblock %}
